<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
android:background="@color/white"
    tools:context=".Login">

    <TextView
        android:id="@+id/blank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="114dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/blank"
        android:layout_centerHorizontal="true"
        android:background="#DC143C"
        app:shapeAppearanceOverlay="@style/roundimageview"
        />

    <TextView
        android:id="@+id/JainMaitri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginBottom="250dp"
        android:text="JainMaitri"
        android:textAlignment="center"
        android:textColor="#524044"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/login_privacy_policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/JainMaitri"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="By tapping &quot;Sign in&quot; you agree to our Terms. Learn How we process your data in our Privacy Policy and Cookies Policy"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp" />


    <LinearLayout
        android:id="@+id/google_sign_in_button"
        android:layout_width="320dp"
        android:layout_height="48.56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="145dp"
        android:width="1dp"
        android:background="@drawable/rounded_card_google"
        android:color="#756568"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24.56dp"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:src="@drawable/google" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:text="Continue with Google"
            android:textColor="#756568"
            android:textSize="16dp" />
    </LinearLayout>


</RelativeLayout>
