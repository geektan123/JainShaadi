<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Dob">

    <TextView
        android:layout_width="221dp"
        android:layout_height="29dp"
        android:text="What's your DOB?"
        android:textSize="24sp"
        android:textColor="#524044"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="270dp"
        android:layout_height="17dp"
        android:text="Lorem ipsum dolor sit amet consectetur."
        android:textSize="14sp"
        android:textColor="#524044"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="47dp"/>
    <!-- Text Input Field -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:layout_marginTop="96dp"
        android:layout_marginLeft="20dp"
        >
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center"
            android:elevation="4dp"
            android:background="@android:color/white">

            <TextView
                android:layout_width="288dp"
                android:layout_height="19dp"
                android:layout_gravity="center"
                android:text="Choose Date"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/date"
                />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:layout_marginTop="596dp"
        >
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:paddingLeft="76dp"
            android:paddingRight="76dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center"
            android:id="@+id/Nextlay"
            android:background="@drawable/rounded_card_background_next_disabled"

            >
            <TextView
                android:layout_width="37dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:text="Next"
                android:id="@+id/Nexttext"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout1"
        android:layout_marginTop="187dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height"
            android:textSize="24dp"
            android:textColor="#524044"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="21dp"
        android:id="@+id/layout"
       >
        <GridLayout
            android:layout_width="280dp"
            android:layout_height="44dp"
            android:rowCount="1"
            android:columnCount="2"
            >
            <Spinner
                 android:id="@+id/spinner1"

                android:layout_width="134dp"
                android:layout_height="44dp"
                android:background="@drawable/rounded_card_8_background"
                android:layout_marginRight="12dp"

                />
            <Spinner
                android:id="@+id/spinner2"

                android:layout_width="134dp"
                android:layout_height="44dp"
                android:background="@drawable/rounded_card_8_background"
                />


        </GridLayout>
    </LinearLayout>



</RelativeLayout>