<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Describe Yourself"
        android:textSize="24dp"
        android:textColor="#524044"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write about yourself in short &amp; expectations from your soulmate."
        android:textSize="14sp"
        android:textColor="#524044"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="47dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:hint="@string/message"
        android:layout_marginTop="115dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="92dp"

            android:background="@drawable/rounded_card_8_background"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:lines="3"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:scrollHorizontally="false" />

        />

    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="215dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="30dp">

            <TextView
                android:layout_width="175dp"
                android:layout_height="30dp"
                android:text="Edit the suggested text above to add a personal touch"
                android:textColor="#A5979A"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="145dp"
                android:layout_height="30dp"
                android:gravity="right">

                <TextView
                    android:layout_width="28dp"
                    android:layout_height="30dp"
                    android:gravity="right"
                    android:text="346"
                    android:textColor="#15D764"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:text=" (500 max)"
                    android:textColor="#756568"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:layout_marginTop="596dp"
        >
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:paddingLeft="76dp"
            android:paddingRight="76dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center"
            android:id="@+id/Nextlay"
            android:background="@drawable/rounded_card_background_next_disabled"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Next"
                android:textSize="16dp"
                android:id="@+id/Nexttext"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>