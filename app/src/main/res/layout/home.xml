<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF1F3"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:gravity="fill_horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/logo_round"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JainMaitri"
                        android:textSize="25dp"
                        android:textColor="#3D2429"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="64dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                   >
                    <ImageView

                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:src="@drawable/save_icon"
                        android:id="@+id/saved"
                        android:layout_marginRight="11dp"/>
                    <ImageView

                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:src="@drawable/notification_icon"
                        android:id="@+id/notification"
                        android:layout_marginRight="11dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- RecyclerView for Card Items -->

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/swipeRefreshLayout"
        android:layout_marginTop="53dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF1F3"
        tools:context=".MainActivity"
        >


        <!-- Add a FrameLayout to wrap both RecyclerView and your existing content -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Sorry, No Matches Found ðŸ˜”"
                android:textAlignment="center"
                android:layout_marginHorizontal="20dp"
                android:visibility="gone"
                android:padding="10dp"
                android:background="@drawable/rounded_red_boder"
                android:layout_gravity="center"/>

            <!-- Add any other views or content you want to display -->

        </FrameLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="93dp"
        android:layout_height="153dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="223dp"
        android:progressTint="#DC143C"
        android:visibility="invisible"
        />
</RelativeLayout>